<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %} {% endblock %} - Bucket List</title>
    {% block stylesheet %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/app.css') }}" alt="logo">
    {% endblock %}
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto"/>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon/favicon-32x32.png') }}">
</head>
<body>
<header>
    <div class="title">
        <div id="logo"><img src="{{ asset('img/logo.png') }}"></div>
        {% if app.user %}
            <h1>Bucket List - Hello {{ app.user.username }} !</h1>
        {% else %}
            <h1>Bucket List</h1>
        {% endif %}
        <hr>
    </div>
    <nav class="bucketlist">
        <ul>
            <li><a href="{{ path('main_home') }}">Accueil</a></li>
            <li><a href="{{ path('wish_list') }}">Wish List</a> </li>
            <li><a href="{{ path('main_about') }}">About us</a> </li>
            {% if app.user %}
            <li><a href="{{ path('logout') }}">Logout</a> </li>
            <li><a href="{{ path('wish_add') }}">Add your idea</a> </li>
            {% else %}
            <li><a href="{{ path('login') }}">Login</a> </li>
            <li><a href="{{ path('app_register') }}">Register</a> </li>
            {% endif %}
        </ul>
    </nav>
</header>
<main>
    {% block main %}
    {% for category, messages in app.flashes %}
        {% for message in messages %}
            <p>{{ category }} : {{ message }}</p>
        {% endfor %}
    {% endfor%}
    {% endblock %}
</main>
<footer>
    &copy; Bucket-List - {{ date() | date("Y") }}
</footer>
</body>
</html>
